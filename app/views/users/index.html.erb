<% if current_user %>

  <h3>Reservations</h3>

  <% @user.reservations.each do |reservation| %>
    <p>
      <%= reservation.restaurant.name %>
      <%= reservation.date %>
      <%= reservation.time %>
      <br>
    </p>
    <%= link_to "Cancel Reservation", reservation, :confirm => "Are you sure you want to cancel?", :method => :delete %>
  <% end %>

<% end %>